{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Photo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('photo_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.id }}</td>
                <td><img src="/upload/{{ entity.id }}.{{ entity.extension }}?name={{ entity.name }}" width="150px"></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('photo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('photo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('photo_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('site') }}">
                Index
            </a>
        </li>
    </ul>
    {% endblock %}
